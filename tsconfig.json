{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src/**/*"],           // recursivo
  "exclude": ["node_modules", "dist"]
}
